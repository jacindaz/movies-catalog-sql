
  <table class="table table-hover">
    <% @genres[0].each do |key,value| %>
      <% if key == "movie_id" %>
        <% next %>
      <% else %>
        <th><%= key.to_s.capitalize %></th>
      <% end %>
    <% end %>

      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre["id"] %></td>
        <td><%= genre["genre"] %></td>
        <td>
          <a href="/movies/<%= genre["movie_id"] %>">
            <%= genre["title"] %>
          </a>
        </td>
        <td><%= genre["year"] %></td>
        <td><%= genre["rating"] %></td>
      </tr>
      <% end %>
  </table>

  </body>
</html>
