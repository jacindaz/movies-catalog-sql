
<!--ORDER BY buttons-->
<div class="btn-group">
  <a href="/movies?order=title">
    <button type="button" class="<%= @button_classes %>">Order by Title</button>
  </a>
  <a href="/movies?order=year">
    <button type="button" class="<%= @button_classes %>">Order by Year</button>
  </a>
  <a href="/movies?order=rating">
    <button type="button" class="<%= @button_classes %>">Order by Rating</button>
  </a>
</div>


<br>

  <table class="table table-hover">
    <% @movies[0].each do |key,value| %>
    <th>
      <%= key.to_s.capitalize %>
    </th>
    <% end %>

      <% @movies.each do |movie| %>
      <tr>
        <td><%= movie["id"] %></td>
        <td><a href="/movies/<%= movie["id"] %>"><%= movie["title"] %></a></td>
        <td><%= movie["year"] %></td>
        <td><%= movie["rating"] %></td>
        <td><%= movie["genre"] %></td>
        <td><%= movie["studio"] %></td>
      </tr>
      <% end %>
  </table>

  </body>
</html>
