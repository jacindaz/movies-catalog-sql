    <h3>Movie Information</h3>

    <table class="table table-hover table_600px_width">
      <% @movies_info[0].each do |key,value| %>
        <tr>
        <% if (key == "actor") || (key == "role") %>
          <% next %>
        <% else %>
          <th><%= key.capitalize %></th>
          <td><%= value %></td>
        <% end %>
      </tr>
      <% end %>
    </table>

    <h3>Actors and Actresses</h3>
    <table class="table table-hover">
      <% @movies_info[0].each do |key,value| %>
        <% if (key == "actor") || (key == "role") %>
          <th>
            <%= key.to_s.capitalize %>
          </th>
        <% end %>
      <% end %>


      <% @movies_info.each do |movie| %>
        <tr>
          <% movie.each do |key,value| %>
            <% if key == "actor" %>
              <td>
                <a href="/actors/<%= movie["actor_id"] %>">
                  <%= value %>
                </a>
              </td>
            <% elsif key == "role" %>
              <td><%= value %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </table>

