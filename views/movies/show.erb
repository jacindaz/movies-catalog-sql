 <img src="<%= @poster_url %>" class="movie_poster">

    <h3>Movie Information</h3>

    <table class="table table-hover table_500px_width">
      <% @movies_info[0].each do |key,value| %>
        <% if key == "synopsis" %>
          <% next %>
        <% end %>
        <tr>
          <th><%= key.capitalize %></th>
          <td><%= value %></td>
        </tr>
      <% end %>
    </table>

    <% if (@movies_info[0]["synopsis"] != "") && (@movies_info[0]["synopsis"] != nil) %>
      <h3>Synopsis</h3>
      <p><%= @movies_info[0]["synopsis"] %></p>
    <% end %>

    <h3>Actors and Actresses</h3>
    <table class="table table-hover">
      <% @cast_actors_info[0].each do |key,value| %>
        <% if (key == "actor") || (key == "role") %>
          <th>
            <%= key.to_s.capitalize %>
          </th>
        <% end %>
      <% end %>


      <% @cast_actors_info.each do |movie| %>
        <tr>
          <% movie.each do |key,value| %>
            <% if key == "actor" %>
              <td>
                <a href="/actors/<%= movie["actor_id"] %>">
                  <%= value %>
                </a>
              </td>
            <% elsif key == "role" %>
              <td><%= value %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </table>

  </body>

